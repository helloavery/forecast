<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<MithraObject xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              objectType="transactional"
              xsi:noNamespaceSchemaLocation="reladomoobject.xsd">

    <PackageName>com.itavery.forecast.domain.mithra.product</PackageName>
    <ClassName>AuditTrailProductDB</ClassName>
    <DefaultTable>forecaster.audit_trail_product</DefaultTable>

    <Attribute name="auditId" javaType="int" columnName="audit_id" primaryKey="true"
               primaryKeyGeneratorStrategy="SimulatedSequence">
        <SimulatedSequence sequenceName="AuditTrailProductSequence"
                           sequenceObjectFactoryName="com.itavery.forecast.domain.mithra.SequenceFactory"
                           hasSourceAttribute="false"
                           batchSize="1"
                           initialValue="1"
                           incrementSize="1"/>
    </Attribute>
    <Attribute name="productType" javaType="String" columnName="product_type" nullable="false"/>
    <Attribute name="auditAction" javaType="String" columnName="audit_action" nullable="false" maxLength="32"/>
    <Attribute name="auditDescription" javaType="String" columnName="audit_description" nullable="false"
               maxLength="2048"/>
    <Attribute name="actionedBy" javaType="String" columnName="actioned_by" nullable="false" maxLength="16"/>
    <Attribute name="dateActioned" javaType="Timestamp" columnName="date_actioned" nullable="false"/>
</MithraObject>
